<h2><%= @list.name %></h2>

<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fit %>

<% @list.bookmarks.each do |bookmark| %>
  <div class="card-product">
    <img src=<%= bookmark.movie.poster_url %> alt="Poster">
    <div class="card-product-infos">
      <h2><%= bookmark.movie.title %> |
      <%= bookmark.comment %> |
      <%= bookmark.movie.rating %> |
      <%= link_to "Delete", bookmark_path(bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
     </h2>
    </div>
  </div>
  <% end %>

<%= link_to "Add movie", new_list_bookmark_path(@list) %>
